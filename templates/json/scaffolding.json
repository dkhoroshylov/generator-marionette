{
    "isFullApp": false,

    "useMongoose": false,
    "useBaucis": false,

    "compassBootstrap": false,
    "includeRequireJS": false,

    "bowerDirectory": "bower_components",

    "app": {
        "path": "",
        "isModular": false,
        "scriptsDirName": "scripts",
        "needsServer": false
    },
    "controller": {
        "dirName": "controllers",
        "classSuffix": "Controller"
    },
    "collection": {
        "dirName": "collections",
        "classSuffix": "Collection"
    },
    "model": {
        "dirName": "models",
        "classSuffix": "Model"
    },
    "module": {
        "dirName": "modules",
        "classSuffix": "Module"
    },
    "region": {
        "dirName": "regions",
        "classSuffix": "Region"
    },
    "router": {
        "dirName": "routers",
        "classSuffix": "Router"
    },
    "view": {
        "dirName": "views",
        "classSuffix": "View",
        "nestViewTypes": true,
        "useNestedViewsSuffix": true,
        "nestedView": {
            "compositeView": {
                "dirName": "composite-views",
                "classSuffix": "Composite"
            },
            "itemView": {
                "dirName": "item-views",
                "classSuffix": "Item"
            },
            "layoutView": {
                "dirName": "layout-views",
                "classSuffix": "Layout"
            }
        }
    },
    "viewTemplate": {
        "dirName": "view-templates",
        "templateSuffix": "-view",
        "templateExtension": ".hbs"
    }
}